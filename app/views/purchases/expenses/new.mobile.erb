<div data-role="header">
  <h1>Tilføj udgifter</h1>
  <%= link_to "Back", purchase_path(@purchase), :"data-icon" => "back", :class => "ui-btn-left" %>
</div>

<div data-role="content">
  <%= form_for [@purchase, @expense] do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title, :required => true %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :price %>
    <%= f.text_field :price, :required => true %>

    <%= submit_tag 'Tilføj udgifter' %>
  <% end %>
</div>

<%= render 'purchases/footer' %>
